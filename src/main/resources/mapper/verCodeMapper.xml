<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.classfilemanager.org.dao.VerCodeMapper">
    <insert id="insert">
        insert into verify_code (id, verification_code) VALUES (#{param1}, #{param2})
    </insert>
    <delete id="delete">
        delete from verify_code where id = #{id}
    </delete>
    <select id="select" resultType="java.lang.String">
        select verification_code from verify_code where id = #{id}
    </select>
</mapper>